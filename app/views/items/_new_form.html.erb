<div class="container new-item bg-white py-3">
  <p>Add an item to your checklist</p>
  <%= simple_form_for [trip, item], html: { class: ""} do |f| %>
    <div class="d-flex justify-content-between align-items-center">
      <%= f.input :name, label: false, placeholder: "Charger, tent, etc" %>
      <%= f.association :user, collection: trip.users, include_blank: false , label: false, label_method: :username,  value_method: :id %>
    </div>
    <div class="d-flex justify-content-between align-items-center">
      <%= f.input :category, collection: Item::CATEGORIES, label: false, wrapper_html: {style: "flex-grow: 1; margin-right: 8px"} %>
      <div class="text-center">
        <%= f.submit "+", class: "btn btn-blue btn-small ml-3 mb-3" %>
      </div>
    </div>
  <% end %>
</div>
