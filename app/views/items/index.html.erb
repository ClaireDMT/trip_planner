<%= turbo_frame_tag :items do %>

  <div class="">
    <%= render "new_form", trip: @trip, item: Item.new  %>
  </div>
  <ul class="checklist list-section bg-white py-3">
    <% @items.each do |item| %>
      <%= turbo_frame_tag "item_#{item.id}"  do %>
        <div class="container">
          <li class="p-0 bg-light-gray d-flex px-3 py-2 justify-content-start align-items-center">
            <div class="item-packed me-3">
              <% if item.packed %>
                <i class="fa-solid fa-square-check text-yellow"></i>
              <% else %>
                <i class="fa-regular fa-square"></i>
              <% end %>
            </div>
            <%= link_to edit_item_path(item), class: "edit-link", data: {bs_toggle: "modal", bs_target: "#edit-item-#{item.id}" } do  %>
                <div class="d-flex py-2 justify-content-between align-items-center">
                  <div class="item-left">
                    <div class="d-flex align-items-center justify-content-center">
                      <div class="ms-4">
                        <p class="fw-bold mb-0"><%= item.name %></p>
                      </div>
                    </div>
                  </div>
                  <div class="item-right">
                    <%= cl_image_tag item.user.photo.key, class: "avatar avatar-bordered" %>
                  </div>
                </div>
            <% end %>
            <%= render "edit_modal", item: item %>
          </li>
        </div>
      <% end %>
    <% end %>
  </ul>
<% end %>
