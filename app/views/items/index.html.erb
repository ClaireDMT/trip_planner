<%= turbo_frame_tag :items do %>

  <ul class="checklist list-section">
    <div class="py-3">
      <%= render "form", trip: @trip, item: Item.new  %>
    </div>
    <% @items.each do |item| %>
      <%= turbo_frame_tag "item_#{item.id}"  do %>
        <li class="p-0">
          <%= link_to edit_item_path(item) do  %>
            <div class="container">
              <div class="d-flex py-2 justify-content-between align-items-center">
                <div class="item-left">
                  <div class="d-flex align-items-center justify-content-center">
                    <div class="item-category">
                      <% if item.packed %>
                        <i class="fa-solid fa-square-check text-yellow"></i>
                      <% else %>
                        <i class="fa-regular fa-square"></i>
                      <% end %>
                    </div>
                    <div class="ms-4">
                      <p class="fw-bold mb-1"><%= item.name %></p>
                    </div>
                  </div>
                </div>
                <div class="item-right">
                  <%= cl_image_tag item.user.photo.key, class: "avatar avatar-bordered" %>
                </div>
              </div>
            </div>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>
<% end %>
