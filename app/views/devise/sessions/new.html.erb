<div class="container h-100 bg-light-gray pt-5 px-5">
  <h2 class="text-blue text-center mb-4">Log in to keep
    <span style = "display: block;">planning your next trip</span>
  </h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-large btn-yellow" %>
    </div>
  <% end %>

  <p class="mt-4">Don't have an account? <%= render "devise/shared/links" %></p>

</div>
