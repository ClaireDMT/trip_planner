{
  "background_color": "#1f487f",
  "description": "Plan your trip, relax your mind",
  "display": "fullscreen",
  "name": "Tripify",
  "icons": [
    <% files = Dir.entries(Rails.root.join("app/assets/images/favicons/")).select {|f| !File.directory? f} %>
    <% files.each_with_index do |file, index| %>
      <% match = file.match(/.+-(?<size>\d{2,3}x\d{2,3}).png/) %>
      {
        "src": "<%= image_path "favicons/#{file}" %>",
        "sizes": "<%= match && match[:size] %>",
        "type": "image/png"
      }<%= "," unless (files.size - 1) == index %>
    <% end %>
  ]
}
